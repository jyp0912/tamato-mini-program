<view class="binding">
  <view class="title" wx:if="{{isBinding}}">绑定PC账号</view>
  <view class="title" wx:else>注册PC账号</view>
  <view class="inputWrapper">
    <input bindinput="watchAcount" value="{{account}}"></input>
    <input bindinput="watchPassword" value="{{password}}"></input>
  </view>
  <b-button text="绑定" type="change" size="mini" wx:if="{{isBinding}}"></b-button>
  <b-button text="注册" type="change" size="mini" wx:else></b-button>
  <view class="tips" wx:if="{{isBinding}}" bindtap="goToSignUp">没有PC账号?点击这里注册PC账号哦</view>
  <view class="tips" wx:else bindtap="goToBind">没有PC账号?点击这里注册PC账号哦</view>
  <image src="../../images/tomato-bg.png" class="bg"></image>
</view>